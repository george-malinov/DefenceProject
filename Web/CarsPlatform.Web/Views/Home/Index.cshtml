@{
    this.ViewData["Title"] = "Home Page";
}

<div class="text-center text-white text-capitalize">
    <h1 class="display-4">Welcome to Car shop!</h1>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<br />
<div class="border text-white col-md-4 offset-md-4">
    <h2 class="text-center" style="font-size:28px">
        <a><span class="hours"></span></a> :
        <a><span class="min"></span></a> :
        <a><span class="sec"></span></a>
        <a><span class="text-sm-center"> - @DateTime.UtcNow.Date.ToShortDateString()</span></a>
    </h2>
</div>
<br />

<div class=" border-top text-white">
    <h3 class="text-center text-white text-monospace">You want to buy a car ?</h3>
    <br />
    <h2 class="text-center">
        <a>Chose now from our list!</a>
        <a class="btn btn-warning" asp-area="" asp-controller="Cars" asp-action="All">Cars</a>
    </h2>
</div>
<br />
<br />
<br />
<br />
<br />
<br />
<br />
<br />
<partial name="_WeatherPlugin" />

<script>
    $(document).ready(function () {
        setInterval(function () {
            var hours = new Date().getHours();
            $(".hours").html((hours < 10 ? "0" : "") + hours);
        }, 1000);
        setInterval(function () {
            var minutes = new Date().getMinutes();
            $(".min").html((minutes < 10 ? "0" : "") + minutes);
        }, 1000);
        setInterval(function () {
            var seconds = new Date().getSeconds();
            $(".sec").html((seconds < 10 ? "0" : "") + seconds);
        }, 1000);
    });
</script>

