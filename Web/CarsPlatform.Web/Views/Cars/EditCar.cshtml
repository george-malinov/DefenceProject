@model CarsPlatform.Web.ViewModels.Cars.EditCarInputModel
@using CarsPlatform.Data.Models.Enums
@{
    this.ViewData["Title"] = "Edit car";
    var categories = this.Model.Categories.Select(x => new SelectListItem(x.Value, x.Key));
}

<form method="post" class="col-md-6 offset-md-3 text-warning text-center"
      style="background-color:black">
    <h1>@this.ViewData["Title"]</h1>
    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfManufacture"></label>
        <input type="date" asp-for="DateOfManufacture" class="form-control" />
        <span asp-validation-for="DateOfManufacture" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Prize"></label>
        <input asp-for="Prize" class="form-control" />
        <span asp-validation-for="Prize" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Power"></label>
        <input asp-for="Power" class="form-control" />
        <span asp-validation-for="Power" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EngineTypes"></label>
        <select asp-for="EngineTypes" class="form-control" asp-items="Html.GetEnumSelectList<EngineType>()"></select>
        <span asp-validation-for="EngineTypes" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TransmissionTypes"></label>
        <select asp-for="TransmissionTypes" class="form-control" asp-items="Html.GetEnumSelectList<TransmissionType>()"></select>
        <span asp-validation-for="TransmissionTypes" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Miles"></label>
        <input asp-for="Miles" class="form-control" />
        <span asp-validation-for="Miles" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Collor"></label>
        <input asp-for="Collor" class="form-control" />
        <span asp-validation-for="Collor" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LocationRegion"></label>
        <input asp-for="LocationRegion" class="form-control" />
        <span asp-validation-for="LocationRegion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LocationTown"></label>
        <input asp-for="LocationTown" class="form-control" />
        <span asp-validation-for="LocationTown" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="categories" class="form-control"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AditionalInformation"></label>
        <textarea asp-for="AditionalInformation" class="form-control" rows="5"></textarea>
        <span asp-validation-for="AditionalInformation" class="text-danger"></span>
    </div>
    <hr />
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-success">Save changes</button>
</form>