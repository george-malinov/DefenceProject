@model CarsPlatform.Web.ViewModels.Cars.CreateCarInputModel
@using CarsPlatform.Data.Models.Enums
@{
    this.ViewData["Title"] = "Add new car";
    var categories = this.Model.Categories.Select(x => new SelectListItem(x.Value, x.Key));
}

<form method="post" class="col-md-6 offset-md-3 text-warning text-center" enctype="multipart/form-data"
      style="background-color:black">
    <h1>@this.ViewData["Title"]</h1>
    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfManufacture"></label>
        <input type="date" asp-for="DateOfManufacture" class="form-control" />
        <span asp-validation-for="DateOfManufacture" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Prize"></label>
        <input asp-for="Prize" class="form-control" />
        <span asp-validation-for="Prize" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Power"></label>
        <input asp-for="Power" class="form-control" />
        <span asp-validation-for="Power" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="form-control" asp-items="categories"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EngineTypes"></label>
        <select asp-for="EngineTypes" class="form-control" asp-items="Html.GetEnumSelectList<EngineType>()"></select>
        <span asp-validation-for="EngineTypes" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TransmissionTypes"></label>
        <select asp-for="TransmissionTypes" class="form-control" asp-items="Html.GetEnumSelectList<TransmissionType>()"></select>
        <span asp-validation-for="TransmissionTypes" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Miles"></label>
        <input asp-for="Miles" class="form-control" />
        <span asp-validation-for="Miles" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Color"></label>
        <input asp-for="Color" class="form-control" />
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Location.Region"></label>
        <input asp-for="Location.Region" class="form-control" />
        <span asp-validation-for="Location.Region" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Location.Town"></label>
        <input asp-for="Location.Town" class="form-control" />
        <span asp-validation-for="Location.Town" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AditionalInformation"></label>
        <textarea asp-for="AditionalInformation" class="form-control" rows="5"></textarea>
        <span asp-validation-for="AditionalInformation" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Images"></label>
        <input asp-for="Images" class="form-control" />
        <span asp-validation-for="Images" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-warning mb-2" value="Submit" />
</form>